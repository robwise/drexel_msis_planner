.modal-body
  .container
    .row
      .authform.column
        = form_for([@taken_course.user, @taken_course],
          html: { class: 'modal-form', role: 'form' }) do |f|
          - if @taken_course.errors.any?
            %ul.error-explanation
              - @taken_course.errors.full_messages.each do |msg|
                %li= msg
          = f.hidden_field :course_id, class: 'hidden'
          = f.hidden_field :user_id, class: 'hidden'
          .form-group
            = f.label :quarter, class: 'control-label'
            = f.text_field :quarter, autofocus: true, class: 'form-control'
          .form-group
            = f.label :grade, class: 'control-label'
            = f.collection_select :grade, grade_options, :first, :first,
              prompt: true, class: 'form-control'
          = f.submit 'Add', class: 'modal-accept-button',
            html: { type: 'button' }
