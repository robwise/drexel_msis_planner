var el = $('#took-this-modal');

<% if @taken_course.errors.any? %>

  // Create a list of errors
  var errors = $('<ul />');

  <% @taken_course.errors.full_messages.each do |error| %>
    errors.append('<li><%= escape_javascript( error ) %></li>');
  <% end %>

  // Display errors on form
  el.find('#taken-course-modal-errors').html('<%= escape_javascript render("modal_errors", object: @taken_course) %>');

<% end %>