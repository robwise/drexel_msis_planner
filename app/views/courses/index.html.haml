-content_for :description, 'Course Listings'
-content_for :title, 'Courses'
.modal.fade#took-this-modal{ tabindex: "-1", role: "dialog",
  'aria-labelledby' => "took-this-modal-Label", 'aria-hidden' => "true" }
.container
  .row
    .h1
      Courses
      - if current_user.present? && current_user.admin?
        = link_to '+', new_course_path
    .column
      %table.table
        %tbody
          - @courses.each do |course|
            %tr.course= render course