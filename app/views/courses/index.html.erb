<%= content_for :description, 'Course Listings' %>
<%= content_for :title, 'Courses' %>
<div class="row">
  <div class="col-md-2">
    <h1>
      Courses
      <% if current_user.present? && current_user.admin? %>
        <%= link_to '+', new_course_path %>
      <% end %>
    </h1>
  </div>
  <div class="col-md-12">
    <table class="table">
      <tbody>
        <% @courses.each do |course| %>
          <tr class="course">
            <%= render course %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>