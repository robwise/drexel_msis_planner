%td
  = link_to user.email, user
%td
  = form_for(user) do |f|
    = f.select(:role, User.roles.keys.map {|role| [role.titleize,role]})
    = f.submit 'Change Role', :class => 'button-xs'
%td
  - unless current_user == user
    = link_to "Delete user",                    |
      user_path(user),                          |
      :data => { :confirm => "Are you sure?" }, |
      :method => :delete,                       |
      :class => 'button-xs'                     |
